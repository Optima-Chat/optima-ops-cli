{
  "name": "@optima-chat/ops-cli",
  "version": "1.0.0",
  "description": "System operations and monitoring CLI for Optima",
  "type": "module",
  "bin": {
    "optima-ops": "./dist/index.js",
    "oo": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "clean": "rm -rf dist",
    "start": "node dist/index.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "optima",
    "ops",
    "cli",
    "monitoring",
    "devops",
    "infrastructure"
  ],
  "author": "Optima Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Optima-Chat/optima-ops-cli.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch-logs": "^3.400.0",
    "@aws-sdk/client-ec2": "^3.400.0",
    "@aws-sdk/client-ecs": "^3.400.0",
    "@aws-sdk/client-elastic-load-balancing-v2": "^3.933.0",
    "@aws-sdk/client-rds": "^3.400.0",
    "@aws-sdk/client-ssm": "^3.400.0",
    "@types/blessed": "^0.1.25",
    "axios": "^1.6.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "commander": "^12.0.0",
    "conf": "^12.0.0",
    "ink": "^4.4.1",
    "ink-select-input": "^5.0.0",
    "ink-spinner": "^5.0.0",
    "ink-table": "^3.1.0",
    "inquirer": "^9.2.0",
    "neo-blessed": "^0.2.0",
    "ora": "^8.0.0",
    "pg": "^8.16.3",
    "react": "^18.3.1",
    "ssh2": "^1.15.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.15.6",
    "@types/react": "^18.3.27",
    "@types/ssh2": "^1.15.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
